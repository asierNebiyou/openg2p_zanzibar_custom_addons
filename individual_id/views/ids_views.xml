<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_partner_relatives_form" model="ir.ui.view">
        <field name="name">res.partner.relatives.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="g2p_registry_individual.view_individuals_form" />
        <field name="arch" type="xml">
            <!-- Insert Relatives tab after Personal Info (basic_info page) -->
            <xpath expr="//page[@name='basic_info']" position="after">
                <page name="IDS" string="ID's">
                    <!-- Right column: Other ID -->
                    <group col="2">
                        <group string="Other ID">
                            <field name="other_id_available" />
                            <field name="other_id_type"
                                invisible="other_id_available != 'yes'" />
                            <field name="other_id_name"
                                invisible="other_id_available != 'yes'" />
                            <field name="other_id_number"
                                invisible="other_id_available != 'yes'" />

                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>