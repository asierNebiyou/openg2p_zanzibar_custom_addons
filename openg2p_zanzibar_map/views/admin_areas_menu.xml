<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_sri_lanka_district_tree" model="ir.ui.view">
        <field name="name">view_sri_lanka_district_tree</field>
        <field name="model">g2p.district</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name" />
                <field name="code" />
                <field name="province_id" />
            </tree>
        </field>
    </record>

    <record id="action_district" model="ir.actions.act_window">
        <field name="name">District</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">g2p.district</field>
        <field name="view_mode">tree</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add District!
            </p><p>
                Click the create button to enter a new District.
            </p>
        </field>
    </record>

    <record id="action_district_tree_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_sri_lanka_district_tree" />
        <field name="act_window_id" ref="action_district" />
    </record>
    <record id="view_g2p_district_tree_inherit" model="ir.ui.view">
        <field name="name">g2p.district.tree.inherit</field>
        <field name="model">g2p.district</field>
        <field name="inherit_id" ref="g2p_registry_base.view_district_config_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state_id']" position="replace">
                <field name="province_id"/>
            </xpath>
            
           
        </field>
    </record>
    <menuitem
        id="menu_district"
        name="District"
        action="action_district"
        parent="g2p_registry_base.g2p_configuration_menu_root"
        sequence="42"
        groups="g2p_registry_base.group_g2p_admin,g2p_registry_base.group_g2p_registrar"
    />

</odoo>
